{
	"name": "proton-vpn-browser-extension",
	"private": true,
"scripts": {
  "check": "ts-node test/check.ts",

  "lint": "run-p lint:*",
  "lint:js": "eslint .",
  "lint:css": "stylelint source/**/*.scss",
  "lint-fix": "run-p 'lint:* -- --fix'",

  "test": "jest",
  "coverage": "jest --coverage",

  "build": "webpack --mode=production",
  "build-ff": "webpack --mode=production --config=webpack-ff.config.js",
  "watch": "webpack --mode=development --watch",
  "watch-ff": "webpack --mode=development --watch --config=webpack-ff.config.js",

  "run:chrome": "web-ext run --source-dir=distribution --target=chromium",
  "run:ff": "web-ext run --source-dir=distribution-ff --watch",

  "pack": "npm run build && web-ext build --overwrite-dest --source-dir=distribution -a . -n vpn-proton-chrome.zip",
  "pack-ff": "npm run build-ff && web-ext build --overwrite-dest --source-dir=distribution-ff -a . -n vpn-proton-firefox.zip",

  "zip": "npm run pack",
  "zip-ff": "npm run pack-ff",
  "zip-source": "node zip-sources.js",

  "repack": "node scripts/repack.js all",
  "repack:chrome": "node scripts/repack.js chrome",
  "repack:ff": "node scripts/repack.js firefox",

  "crx": "crx3 distribution -o vpn-proton.me.crx",
  "xpi": "web-ext build --overwrite-dest --source-dir=distribution-ff -a . -n vpn-proton.me.xpi",

  "i18n": "ts-node source/js/translation/extract.ts",
  "po": "ts-node source/js/translation/extract.ts po",
  "locales": "ts-node source/js/translation/update-locales.ts",
  "ts": "ts-node"
},
    "devDependencies": {
		"@babel/core": "^7.17.5",
		"@babel/preset-env": "^7.16.11",
		"@eslint/js": "^9.35.0",
		"@jest/globals": "^30.0.0",
		"@types/chrome": "^0.1.0",
		"@types/firefox-webext-browser": "^120.0.0",
		"@types/glob": "^9.0.0",
		"@types/jest": "^30.0.0",
		"archiver": "^7.0.1",
		"babel-loader": "^10.0.0",
		"chrome-webstore-upload-cli": "^3.0.0",
		"clean-webpack-plugin": "^4.0.0",
		"copy-webpack-plugin": "^13.0.0",
		"crx3": "^1.1.3",
		"css-loader": "^7.0.0",
		"css-minimizer-webpack-plugin": "^7.0.0",
		"daily-version": "^2.0.0",
		"decompress": "^4.2.1",
		"eslint": "^9.35.0",
		"glob": "^11.0.1",
		"globals": "^15.15.0",
		"jest": "^30.0.0",
		"jest-chrome": "^0.8.0",
		"mini-css-extract-plugin": "^2.7.2",
		"node-html-parser": "^7.0.0",
		"npm-run-all2": "^8.0.0",
		"sass": "^1.56.2",
		"sass-loader": "^16.0.0",
		"stylelint": "^16.16.0",
		"stylelint-config-standard-scss": "^15.0.0",
		"stylelint-config-xo": "^1.0.2",
		"terser-webpack-plugin": "^5.3.1",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.8.0",
		"typescript-parser": "^2.6.1",
		"web-ext": "^8.6.0",
		"webpack": "^5.75.0",
        "webpack-cli": "^6.0.0"
	},
	"dependencies": {
		"@sentry/browser": "^9.9.0",
		"plural-forms": "^0.5.3",
		"webext-options-sync": "^4.0.0",
		"webextension-polyfill": "^0.12.0"
	},
	"overrides": {
		"jest-chrome": {
			"jest": "$jest"
		}
	}

}
